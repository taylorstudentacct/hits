<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Likes

    <a data-toggle="collapse" href="#picture_likes_new_form">
      Add like
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @picture.likes.each do |like| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to like, like %>

        <%= link_to like, method: :delete, data: { confirm: "Do you really want to delete this like" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="picture_likes_new_form">
        <%= render partial: "pictures/picture_likes_new_form" %>
      </div>
    </div>

  </ul>
</div>
