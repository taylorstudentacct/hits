<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Pictures

    <a data-toggle="collapse" href="#rapid_pictures_new_form">
      Add picture
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @rapid.pictures.each do |picture| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to picture, picture %>

        <% if current_user == picture.rafter %>
          <%= link_to picture, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="rapid_pictures_new_form">
        <%= render partial: "rapids/rapid_pictures_new_form" %>
      </div>
    </div>

  </ul>
</div>
