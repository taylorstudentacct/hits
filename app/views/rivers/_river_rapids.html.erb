<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Rapids

    <a data-toggle="collapse" href="#river_rapids_new_form">
      Add rapid
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @river.rapids.each do |rapid| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to rapid, rapid %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to rapid, method: :delete, data: { confirm: "Do you really want to delete this rapid" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="river_rapids_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "rivers/river_rapids_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
