<div class="card mb-3">
  <h2 class="card-header h4">
    Like #<%= like.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Picture</dt>
      <!-- Display picture_id start -->
      <dd>
        <% if @like.picture.present? %>
          <%= link_to like.picture, like.picture %>
        <% end %>
      </dd>
      <!-- Display picture_id end -->

      <dt>Liked by</dt>
      <!-- Display liked_by start -->
      <dd>
        <% if @like.liker.present? %>
          <%= link_to like.liker, like.liker %>
        <% end %>
      </dd>
      <!-- Display liked_by end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back like, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link like start -->
      <div class="col">
        <%= link_to edit_like_url(like), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link like end -->

      <!-- Delete link like start -->
      <div class="col">
        <%= link_to like, method: :delete, data: { confirm: "Do you really want to delete this like?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link like end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(like.updated_at) %> ago
  </div>
</div>
